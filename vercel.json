{
  "version": 2,
  "buildCommand": "npm ci --prefix frontend && npm run build --prefix frontend && rm -rf dist && cp -r frontend/dist dist",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/lit/(.*)", "dest": "api/lit/[...path].ts" },
    { "src": "/(.*)", "dest": "dist/index.html" }
  ]
}
