{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/lit/(.*)", "dest": "api/lit/[...path].ts" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
