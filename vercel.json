{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/lit/(.*)", "dest": "api/lit/[...path].ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
