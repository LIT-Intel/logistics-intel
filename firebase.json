{
  "hosting": {
    "site": "logistics-intel",
    "public": "frontend/dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.css", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] },
      { "source": "**/*.js",  "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] }
    ],
    "rewrites": [
      { "source": "/api/searchCompanies", "function": "searchCompanies" },
      { "source": "/api/getCompanyShipments", "function": "getCompanyShipments" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
