{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/lit/[...path].ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/lit/(.*)", "dest": "/api/lit/$1" },
    { "src": "/api/public/(.*)", "dest": "https://logistics-intel-gateway-2e68g4k3.uc.gateway.dev/public/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

