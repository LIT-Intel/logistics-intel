{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/lit/public/getFilterOptions", "destination": "https://lit-gw-2e68g4k3.uc.gateway.dev/public/getFilterOptions" },
    { "source": "/api/lit/public/searchCompanies", "destination": "https://lit-gw-2e68g4k3.uc.gateway.dev/public/searchCompanies" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
